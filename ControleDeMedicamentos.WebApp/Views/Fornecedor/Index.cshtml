﻿@{
    ViewBag.Titulo = "Visualização de Fornecedores";
}

@model VisualizarFornecedoresViewModel;

<a class="btn btn-primary" asp-action="Cadastrar">
    <i class="bi bi-plus"></i>
    Cadastrar novo/a
</a>

<div class="row g-3 mt-4">
    @foreach (DetalhesFornecedorViewModel f in Model.Registros)
    {
        <div class="col-md-4 col-lg-3">
            <div class="card h-100">
                <div class="card-body">
                    <h5 class="card-title">@f.Nome</h5>
                    <p class="card-text mb-0"><strong>Telefone:</strong> @f.Telefone</p>
                    <p class="card-text mb-0"><strong>CNPJ:</strong> @f.Cnpj</p>
                </div>
                <div class="card-actions ms-auto me-3 mb-3 d-flex gap-1">
                    <a class="btn btn-sm btn-primary rounded-circle d-flex justify-content-center align-items-center"
                       style="height: 35px; width: 35px;"
                       asp-action="Editar"
                       asp-route-id="@f.Id">
                        <i class="bi bi-pencil"></i>
                    </a>
                    <a class="btn btn-sm btn-danger rounded-circle d-flex justify-content-center align-items-center"
                       style="height: 35px; width: 35px;"
                       asp-action="Excluir"
                       asp-route-id="@f.Id">
                        <i class="bi bi-trash2"></i>
                    </a>
                </div>
            </div>
        </div>
    }
    <div class="col-lg-5 order-0 order-lg-1">
        <img src="~/Imagem/truck.svg" class="img-fluid" />
    </div>
</div>